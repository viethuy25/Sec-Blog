<% layout('/layouts/boilerplate')%>
<h1>WELCOME TO NEWBIE ZONE</h1>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">Delete Post</h1>
        <form action="/Posts/<%= post._id %>?_method=DELETE" method="POST" class="needs-validation" novalidate>
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="post[title]" value="<%= post.title%>" required>
            </div>
            <button type="submit">Delete Post</button>
        </form>
    </div>
</div>
