<% layout('/layouts/boilerplate')%>
<h1>WELCOME TO NEWBIE ZONE</h1>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">New Post</h1>
        <form action="/Posts/<%= post._id %>?_method=PUT" method="POST">
            <div class='mb-3'>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="post[title]" value="<%= post.title %>">
            </div>
            <div class='mb-3'>
                <label class="form-label" for="author">Author</label>
                <input class="form-control" type="text" id="author" name="post[author]" value="<%= post.author %>">
            </div>
            <div class='mb-3'>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="post[description]"><%= post.description %></textarea>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="author">Date</label>
                <input class="form-control" type="text" id="date" name="post[date]" value="<%= post.date %>">
            </div>
            <div class='mb-3'>
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="post[image]" value="<%= post.image %>">
            </div>
            <button>Edit Post</button>
        </form>
        <a href='/Posts/<%= post._id %>'>All posts </a>
    </div>
</div>