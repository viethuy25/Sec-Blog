<body>
  <h1>WELCOME TO NEWBIE ZONE</h1>

    <main>
        <div class="container">
            <section class="main_container">
                <div class="card mb-4">
                    <img class="card-img-top" src="https://placeimg.com/750/300/tech" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title"><%= posts.reverse()[0].title %></h2>
                        <p class="card-text"><%= posts[0].description %></p>
                        <a href="/Posts/<%= posts[0]._id %>" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on <%= posts[0]._date %> by <%= posts[0].author %>
                    </div>
                </div>

                <div class="posts">
                  <% for (let post of posts) {%>
                    <div class="row justify-content-center">
                        <div class="col-lg-7" style="margin-top: 50px;">
                            <div class="card">

                                <img src="https://picsum.photos/500/500"
                                    class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h4 class="card-title"><a href="/Posts/<%= post._id %>"> <%= post.title %> </a>
                                      <h5>Posted by <%= post.author %></h5>
                                    </h4>

                                    <ul class="list-group">
                                        <li class="list-group-item">This is supposed to be a comment</li>
                                        <li class="list-group-item">This is supposed to be a comment</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </section>

            <section class="sidebar">
                <nav class="collapse bd-links" id="bd-docs-nav" aria-label="Main navigation">
